{
  "manifest_version": 3,
  "name": "ByeBuy Wishlist",
  "version": "1.0",
  "description": "Add Amazon products to your ByeBuy wishlist with a single click",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": [
    "*://*.amazon.com/*",
    "*://*.amazon.ca/*",
    "*://*.amazon.co.uk/*",
    "http://localhost:8000/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.co.uk/*"
      ],
      "js": ["dist/content.js"],
      "css": ["dist/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/pig_icon.png"],
      "matches": [
        "*://*.amazon.com/*",
        "*://*.amazon.ca/*",
        "*://*.amazon.co.uk/*"
      ]
    }
  ]
}
